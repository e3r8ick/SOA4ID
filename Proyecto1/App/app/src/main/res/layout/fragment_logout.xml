<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    android:paddingTop="30dp">

    <ImageView
        android:id="@+id/profile_fragment_picture"
        android:layout_width="149dp"
        android:layout_height="149dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/profile_fragment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_name"
        android:paddingLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/profile_fragment_get_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_name"
        android:paddingLeft="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/profile_fragment_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_email"
        android:paddingLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/profile_fragment_get_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_email"
        android:paddingLeft="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/profile_fragment_sports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_sports"
        android:paddingLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/profile_fragment_get_sports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_sports"
        android:paddingLeft="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/profile_fragment_teams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_team"
        android:paddingLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/profile_fragment_get_teams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_team"
        android:paddingLeft="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />


</LinearLayout>